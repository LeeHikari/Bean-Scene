
@model ReservationProject.Data.Reservation



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <div class="text-center" style="background-image: url('../../../img/Bean-scene-bg2.png');">
            @* Carousel Section *@
            <div class="container pt-5 pb-5">
                <div class="row justify-content-center bg-opacity-25 bg-body pb-5 pt-5" id="Reservation-Form">
                    <div class="col-sm-10 col-md-8 col-lg-7 container bg-white mb-3 p-3">
                        <p class="fs-1 mb-0">Reservation</p>
                        <p class="fs-4 m-0"> Successfully Booked</p>
                    </div>
                    <div class="col-sm-10 col-md-8 col-lg-7 shadow p-3 bg-body rounded">
                        <dl class="row text-center fs-6">
                            <dt>
                                @Html.DisplayNameFor(model => model.StartTime)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.StartTime)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Duration)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Duration)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Guests)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Guests)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Note)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Note)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.ReservationStatus)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.ReservationStatus.Name)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.ReservationSource)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.ReservationSource.Name)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Sitting.Restaurant.Name)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Sitting.Restaurant.Name)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Sitting)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Sitting.Name)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Person.Email)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Person.Email)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Person.Fullname)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Person.Fullname)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Person.Phone)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Person.Phone)
                            </dd>
                        </dl>

                        <div class="d-flex justify-content-center">
                            <a asp-action="Index" class="btn btn-info">Back to Menu</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
    </div>

</body>
</html>