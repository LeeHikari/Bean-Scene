<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReservationProject</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/mod-bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/styleSidebar.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    @await RenderSectionAsync("Styles", required: false)

</head>

<body class="container-fluid p-0">
    <div class="row w-100 m-0">
        <div class="col-12 p-0">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-dark m-0">
                <div class="container-fluid" id="nav-font">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="col-12">
                        <div class="nav navbar-collapse collapse d-flex justify-content-md-between" id="navbar-collapse">
                            <div class="col-md-5 col-lg-4 d-flex justify-content-center">
                                <ul class="nav navbar-nav mb-2 flex-nowrap">
                                    <li class="nav-item">
                                        <a class="nav-link text-light fs-5 text-center" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-light fs-5 text-center" asp-area="" asp-controller="Home" asp-action="Index">About Us</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-light fs-5 text-center" asp-area="" asp-controller="Home" asp-action="Index">Menus</a>
                                    </li>
                                    @if (User.IsInRole("Member"))
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-light fs-5 text-center" id="Reservations" asp-area="Member" asp-controller="Reservation" asp-action="Index">Reservations</a>
                                        </li>
                                    }
                                    @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-light fs-5 text-center" id="Dashboard" asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a>
                                        </li>
                                    }

                                </ul>

                            </div>
                            <div class="d-md-none d-lg-flex col-lg-4">
                                <a class="fadeupText navbar-brand text-light fw-bold w-100 m-autow fs-1 fst-normal text-center display-4 d-none d-md-block" asp-area="" asp-controller="Home" asp-action="Index">BEAN SCENE</a>
                            </div>
                            <div class="col-md-5 d-lg-flex justify-content-lg-center align-content-md-end text-center col-lg-4">
                                <partial name="_LoginPartial" />
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="container-fluid d-flex p-0 pt-1" >
            <div class="d-flex">
                <nav id="sidebar" class="pt-5">
                    @*<img src="~/img/Bean-Scene-Logo-Circle.png" />*@
                    <a class="w-100 justify-content-center" asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <img class="d-block m-auto" src="~/img/Bean-Scene-Logo.png" title="Dashboard" />
                    </a>
                    <div class="p-4 pt-5">
                        <ul class="list-unstyled components mb-5">
                           @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                            {

                                <li class="active">
                                    <a href="#reservationSubmenu" data-toggle="collapse" data-bs-toggle="collapse" aria-expanded="false"  class="dropdown-toggle">Reservations</a>
                                    <ul class="collapse list-unstyled" id="reservationSubmenu">
                                        <li>
                                            <a asp-area="Admin" asp-controller="Reservation" asp-action="Create">Create Reservation</a>
                                        </li>
                                        <li>
                                            <a asp-area="Admin" asp-controller="Reservation" asp-action="Index">View Reservations</a>
                                        </li>
                                        <li>
                                            <a asp-area="Admin" asp-controller="Reservation" asp-action="SittingIndex">Sort Reservations by Sittings</a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            @if (User.IsInRole("Admin"))
                             {
                                <li class="active">
                                    <a href="#sittingSubmenu" data-toggle="collapse" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Sittings</a>
                                    <ul class="collapse list-unstyled" id="sittingSubmenu">
                                        <li>
                                            <a asp-area="Admin" asp-controller="Sitting" asp-action="Create" id="CreateSittings">Create Sitting </a>
                                        </li>
                                        <li>
                                            <a asp-area="Admin" asp-controller="Sitting" asp-action="CreateMulti" id="CreateMultiSittings">Create Multiple Sittings </a>
                                        </li>
                                        <li>
                                            <a asp-area="Admin" asp-controller="Sitting" asp-action="Index">View Sittings</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="active">
                                    <a href="#employeeSubmenu" data-toggle="collapse" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Employee</a>
                                    <ul class="collapse list-unstyled" id="employeeSubmenu">
                                        <li>
                                            <a asp-area="Admin" asp-controller="Employee" asp-action="Create" id="CreateEmployee">Create Employee</a>
                                        </li>
                                        <li>
                                            <a asp-area="Admin" asp-controller="Employee" asp-action="Index">View Employees</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="active">
                                    <a href="#reportSubmenu" data-toggle="collapse" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Reports</a>
                                    <ul class="collapse list-unstyled" id="reportSubmenu">
                                        <li>
                                            <a asp-area="Admin" asp-controller="Report" asp-action="Index">View Reports</a>
                                        </li>
                                    </ul>
                                </li>

                            }
                           
                           
                        </ul>

                        <div class="footer">
                            <p>Bean Scene Administration tools</p>
                        </div>

                    </div>
                </nav>
            </div>
            <div class="container-fluid pe-0 ps-1">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

        <footer class="bg-dark footer text-center text-light fs-6 p-4">
            <div class="container">
                &copy; 2021 - ReservationProject - <a class="text-light fw-bold" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy<br /></a>
            </div>
        </footer>

        <script src="~/js/calendar.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>

        @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>
