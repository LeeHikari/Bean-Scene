@model IEnumerable<ReservationProject.Data.Sitting>
@{
    ViewData["Title"] = "Index";

}

<h1 class="text-center fw-bold m-5">View Sittings</h1>
<a asp-action="Create" class="btn btn-primary">Create</a>
<hr />
<table border="1" width="100%" class="table table-striped">
    <thead class="table-dark">
        <tr>
            <td>Id</td>
            <td>Restaurant Name</td>
            <td>Sitting Name</td>
            <td>Start Time</td>
            <td>End Time</td>
            <td>Capacity</td>
            <td>Is Closed</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody class="table-light">
        @foreach (var r in Model)
        {
        <tr>
            <td>@r.Id</td>
            <td>@r.Restaurant.Name</td>
            <td>@r.Name</td>
            <td>@r.StartTime</td>
            <td>@r.EndTime</td>
            <td>@r.Capacity</td>
            <td>@r.IsClosed</td>
            <td>
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@r.Id">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@r.Id">Delete</a> |
                <a asp-action="Update" class="btn btn-warning" asp-route-id="@r.Id">Update</a>
            </td>
        </tr>
        }
    </tbody>
</table>
