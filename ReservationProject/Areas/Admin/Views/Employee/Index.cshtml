@* Index page is for displaying a list of Employees, Options include View Details, Edit Employee, Delete Employee*@
@* Edit Employee Includes Reset Password for Admin Only *@
@* Other Options Include Create new Employee*@

@model ReservationProject.Areas.Admin.Models.Employee.Index

@{
    ViewData["Title"] = "Index";

}

<h1 class="text-center fw-bold m-3">View Employees</h1>
<a asp-action="Create" class="btn btn-primary">Create</a>
<hr />
<h2>Employees</h2>
<table border="1" width="100%" class="table table-striped">
    <thead class="table-dark">
        <tr>
            <td>Email</td>
            <td>Full Name</td>
            <td>Phone</td>
            <td>Role</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody class="table-light">
        @foreach (var admin in Model.Admin)
        {
            <tr>
                <td>@admin.Email</td>
                <td>@admin.Fullname </td>
                <td>@admin.PhoneNumber</td>
                <td>Admin</td>

                <td>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@admin.Id">Details</a> |
                    <a asp-action="Update" class="btn btn-warning" asp-route-id="@admin.Id">Update</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@admin.Id">Delete</a>
                </td>
            </tr>
        }
        @foreach (var staff in Model.Staff)
        {
            <tr>
                <td>@staff.Email</td>
                <td>@staff.Fullname</td>
                <td>@staff.PhoneNumber</td>
                <td>Staff</td>
                <td>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@staff.Id">Details</a> |
                    <a asp-action="Update" class="btn btn-warning" asp-route-id="@staff.Id">Update</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@staff.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
